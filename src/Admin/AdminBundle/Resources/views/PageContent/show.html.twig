{% extends 'AdminAdminBundle::layout.html.twig' %}

{% block content -%}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class='admin-title'>
            <div class='pull-left'>
                <h1>{% trans %}admin.pagecontent_show_title{% endtrans %}</h1>
            </div>

            <div class='pull-right'>
                {% form_theme delete_form with ['AdminAdminBundle:Form:bootstrap_form_delete_override.html.twig'] %}
                {{ form(delete_form) }}
            </div>

            <div class='pull-right'>
                <a href="{{ path('admin_pagecontent') }}" class="btn btn-warning btn-sm pull-right">
                    <i class="glyphicon glyphicon-arrow-left"></i>
                    <span> {% trans %}admin.back_to_list{% endtrans %}</span>
                </a>
            </div>
        </div>
    </div>
        
    <div class="panel-body">    

        <div class="panel panel-info">
            <div class="panel-heading">
                {{ entity.position }}
            </div>
            <div class="panel-body">

                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>content</th>
                            <td>{{ entity.getContent() }}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
        
     </div>   

{% endblock %}
    