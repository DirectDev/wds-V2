{% extends 'AdminAdminBundle::layout.html.twig' %} {% trans_default_domain 'AdminBundle' %}

{% block content -%}

    <h1 class="page-header">{% trans %}admin.tag_list_title{% endtrans %}</h1>

    {% include 'AdminAdminBundle::search_add.html.twig' with { add_path : path('admin_tag_new') }%}

    <!-- begin row -->
    <div class="row">

        <div class="col-md-12 ui-sortable">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="table-basic-4">
            
                  {% include 'AdminAdminBundle::panel_heading.html.twig' with { title : 'tags' }%}

                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin_tag_show', { 'id': entity.id }) }}">{{ entity.name }}</a> 
                                    </td>
                                    <td>
                                        <a class='pull-right' href="{{ path('admin_tag_edit', { 'id': entity.id }) }}">{% trans %}admin.edit{% endtrans %}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end panel -->
        </div>
    </div>
    <div class="margin-bottom-30"></div>

    {{ knp_pagination_render(pagination) }}


{% endblock %}    


