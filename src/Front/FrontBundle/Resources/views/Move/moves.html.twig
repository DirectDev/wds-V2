{% extends 'FrontFrontBundle:Move:moveLayout.html.twig' %}

{% block content %}

    {% include 'FrontFrontBundle:Move:moveBreadcrumb.html.twig' with { active : 'moves' } %}

    {#<!--=== Profile ===-->
    <div class="container content profile">
        <div class="row">

            <!-- Profile Content -->            
            <div class="col-md-12">


                {% for video in videos %}
                    {% render(path('front_video_show', { id : video.id } )) %}
                {% endfor %}

            </div>
            <!-- End Profile Content -->            
        </div>
    </div><!--/container-->   #} 

    <!--=== Search Block Version 2 ===-->
    <div class="search-block-v2">
        <div class="container">
            <div class="col-md-6 col-md-offset-3">
                <h2>Search again</h2>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search words with regular expressions ...">
                    <span class="input-group-btn">
                        <button class="btn-u" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>    
    </div><!--/container-->     
    <!--=== End Search Block Version 2 ===-->

    <!--=== Search Results ===-->
    <div class="container s-results margin-bottom-50">
        <div class="row">
            <div class="col-md-2 hidden-xs related-search">
                <div class="row">
                    
                    <div class="col-md-12 col-sm-4">
                        <h3>Search by Tag</h3>
                        <ul class="list-unstyled">
                            {% for tag in tags %}
                                <li>
                                    <a href="#">
                                        {{ tag.getTitle() }}
                                    </a>
                                </li>     
                            {% endfor %}   
                        </ul>
                        <hr>
                    </div> 
                        
                    <div class="col-md-12 col-sm-4">
                        <h3>Search by People</h3>
                        <ul class="list-unstyled blog-photos margin-bottom-30">
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/5.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/6.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/8.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/10.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/11.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/1.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/2.jpg") }}" alt="" class="hover-effect"></a></li>
                            <li><a href="#"><img src="{{ asset("front/img/sliders/elastislide/7.jpg") }}" alt="" class="hover-effect"></a></li>
                        </ul>
                    </div>    

                </div>        
            </div><!--/col-md-2-->

            <div class="col-md-10">

                {% for video in videos %}
                    {% render(path('front_video_show', { id : video.id } )) %}
                {% endfor %}

                <div class="margin-bottom-30"></div>

                <div class="text-left">
                    <ul class="pagination">
                        <li><a href="#">«</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">...</a></li>
                        <li><a href="#">157</a></li>
                        <li><a href="#">158</a></li>
                        <li><a href="#">»</a></li>
                    </ul>                                                            
                </div>
            </div><!--/col-md-10-->
        </div>        
    </div><!--/container-->     
    <!--=== End Search Results ===-->
{% endblock %}