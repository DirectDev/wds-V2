<div class="col-sm-6 sm-margin-bottom-30 {% if usersLoveUser|length == 0 and not app.user %}hidden-sm hidden-xs{% endif %}" 
     id='loves_div'>
    <div class="panel panel-profile">
        <div class="panel-heading overflow-h">
            <h2 class="panel-title heading-sm pull-left"><i class="fa fa-heart"></i>{% trans %}user.they_like{% endtrans %}</h2>
        </div>
        <div class="panel-body">

            {% if usersLoveUser|length > 0 %}
                <ul class="list-unstyled  margin-bottom-30 list-inline">
                    {% for userLoveUser in usersLoveUser %}
                        <li class='float-left margin-bottom-10 margin-right-10 no-padding'>
                            {% include 'FrontFrontBundle:User:memberPhoto.html.twig' with { user : userLoveUser } %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if app.user %}
                {% if app.user not in usersLoveUser %}
                    {{ form_start(love_form, {'attr' : { 'class' : 'no_validation'} }) }}
                    {{ form_widget(love_form.submit) }}
                    {{ form_end(love_form) }}
                {% else %}
                    {{ form_start(unlove_form, {'attr' : { 'class' : 'no_validation'} }) }}
                    {{ form_widget(unlove_form.submit) }}
                    {{ form_end(unlove_form) }}
                {% endif %}
            {% endif %}

        </div>       
    </div>
</div>
