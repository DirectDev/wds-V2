<div class="col-sm-6 sm-margin-bottom-30  hidden-sm hidden-xs">
    <div class="panel panel-profile">
        <div class="panel-heading overflow-h">
            <h2 class="panel-title heading-sm pull-left"><i class="fa fa-bar-chart-o "></i>{% trans %}overviews.skills{% endtrans %}</h2>
        </div>
        <div class="panel-body">
            
            {% set max_lovesme = 100 %}
            {% if count_lovesme < max_lovesme %}
                {% set ratio_lovesme = (count_lovesme/max_lovesme*100) %}
            {% else %}
                {% set ratio_lovesme = max_lovesme %}
            {% endif %}
            <small>{% trans %}overviews.likes{% endtrans %}</small>
            <small>
                {% if count_lovesme > 1000 %}
                    {{ (count_lovesme/1000)|round(1) }}k
                {% else %}
                    {{ count_lovesme }}
                {% endif %}
            </small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_lovesme }}%" aria-valuemax="{{ max_lovesme }}" aria-valuemin="0" aria-valuenow="{{ ratio_lovesme }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>


            {% set max_events = 20 %}
            {% if count_events < max_events %}
                {% set ratio_events = (count_events/max_events*100) %}
            {% else %}
                {% set ratio_events = max_events %}
            {% endif %}
            <small>{% trans %}overviews.events{% endtrans %}</small>
            <small>{{ count_events }}</small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_events }}%" aria-valuemax="{{ max_events }}" aria-valuemin="0" aria-valuenow="{{ ratio_events }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>

            {% set max_videos = 20 %}
            {% if count_videos < max_videos %}
                {% set ratio_videos = (count_videos/max_videos*100) %}
            {% else %}
                {% set ratio_videos = max_videos %}
            {% endif %}
            <small>{% trans %}overviews.videos{% endtrans %}</small>
            <small>{{ count_videos }}</small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_videos }}%" aria-valuemax="{{ max_videos }}" aria-valuemin="0" aria-valuenow="{{ ratio_videos }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>

            {% set max_photos = 20 %}
            {% if count_photos < max_photos %}
                {% set ratio_photos = (count_photos/max_photos*100) %}
            {% else %}
                {% set ratio_photos = max_photos %}
            {% endif %}
            <small>{% trans %}overviews.photos{% endtrans %}</small>
            <small>{{ count_photos }}</small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_photos }}%" aria-valuemax="{{ max_photos }}" aria-valuemin="0" aria-valuenow="{{ ratio_photos }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>

            {% set max_musics = 20 %}
            {% if count_musics < max_musics %}
                {% set ratio_musics = (count_musics/max_musics*100) %}
            {% else %}
                {% set ratio_musics = max_musics %}
            {% endif %}
            <small>{% trans %}overviews.musics{% endtrans %}</small>
            <small>{{ count_musics }}</small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_musics }}%" aria-valuemax="{{ max_musics }}" aria-valuemin="0" aria-valuenow="{{ ratio_musics }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>


            {% set max_views = 10000 %}
            {% set count_views = user.getDisplayCounter %}
            {% if count_views < max_views %}
                {% set ratio_views = (count_views/max_views*100) %}
            {% else %}
                {% set ratio_views = max_views %}
            {% endif %}
            <small>{% trans %}overviews.views{% endtrans %}</small>
            <small>
                {% if count_views > 1000 %}
                    {{ (count_views/1000)|round(1) }}k
                {% else %}
                    {{ count_views }}
                {% endif %}
            </small>
            <div class="progress progress-u progress-xxs">
                <div style="width: {{ ratio_views }}%" aria-valuemax="{{ max_views }}" aria-valuemin="0" aria-valuenow="{{ ratio_views }}" role="progressbar" class="progress-bar progress-bar-u">
                </div>
            </div>


        </div>
    </div>
</div>    