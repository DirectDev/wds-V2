<div class="breadcrumbs breadcrumbs-dark">
    <div class="container">
        {% if title is not defined and app.getUser %}
            {% set title = app.getUser.getName() %}
        {% endif %}
        {% if page is defined and page.getTitle() %}
            {% set title = page.getTitle() %}
        {% endif %}
        <h1 class="pull-left">{{ title }}</h1>
        <ul class="pull-right breadcrumb">
            <li>
                <a href="{{ path('home') }}">{% trans %}link.home{% endtrans %}</a>
            </li>
            {% if app.getUser() and page is not defined %}
                <li>
                    {{ app.user.getName()|capitalize }}
                </li>
            {% endif %}
            <li class="active">{{ title }}</li>
        </ul>
    </div>
</div>