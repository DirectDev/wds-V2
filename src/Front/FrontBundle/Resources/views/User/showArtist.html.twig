<tr>
    <td>
        {% if person.isFacebookUser %}
            <img src='{{ person.profilePictureUrl }}' class="rounded-x"/> 
        {% elseif person.profilePictureUrl %}
            <img src='{{ asset(person.profilePictureUrl)| imagine_filter('city_thumb') }}' class="rounded-x" /> 
        {% endif %}
    </td>
    <td class="td-width">
        <h3><a href="#">{{ person.username|capitalize }}</a></h3>
        <p>{{ person.getDescriptionShort|raw }}</p>
        <small class="hex">{{ person.getBaseline|capitalize }}</small>
    </td>
    <td>
        <span class="label label-success">Success</span>
    </td>
    <td>
        <ul class="list-inline s-icons">
            <li>
                <a data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Facebook" href="{{ person.facebookLink }}">
                    <i class="fa fa-facebook"></i>
                </a>
            </li>
            <li>
                <a data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Twitter" href="{{ person.twitterLink }}">
                    <i class="fa fa-twitter"></i>
                </a>
            </li>
            <li>
                <a data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Dropbox" href="#">
                    <i class="fa fa-dropbox"></i>
                </a>
            </li>
            <li>
                <a data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Linkedin" href="#">
                    <i class="fa fa-linkedin"></i>
                </a>
            </li>
        </ul>
        <span><a href="#">info@example.com</a></span>
        <span><a href="#">www.htmlstream.com</a></span>
    </td>
</tr>
