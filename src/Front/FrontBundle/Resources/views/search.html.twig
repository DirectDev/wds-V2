<div class="search_transversal">

    <div class="container">

        <form id="search_event_form" action="{{ path('search_search_front_event') }}" method="GET" class="no_validation" role="search">

            {% set placeholder_city = app.session.get('city')|capitalize %}
            {% if not placeholder_city %}
                {% set placeholder_city = 'Lille, France'%}
            {% endif  %}

            {% set placeholder_date = app.session.get('startdate')|capitalize %}
            {% if not placeholder_date %}
                {% set placeholder_date = "now"|date("Y-m-d") %}
            {% endif  %}


            <div class="col-sm-3 md-margin-bottom-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                    <input type="text" autocomplete="off" class="form-control  input-md" id="search_search_bundle_cityfrontsearch_searchcity" 
                           placeholder="{{ placeholder_city }}"
                           name="searchcity">
                </div>
            </div>    
            <div class="col-sm-3 md-margin-bottom-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" autocomplete="off" class="form-control  input-md datepicker" id="search_search_bundle_eventdatefrontsearch_searcheventdate" 
                           placeholder="{{ placeholder_date }}"
                           name="searcheventdate">
                </div>
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-u btn-md width-full"> {% trans %}front.search_event_button{% endtrans %}</button>
            </div>

        </form>

        <div class="col-sm-3 text-center">
            <a href="{{ path('landing-share-event') }}" type="submit" class="btn btn-info btn-md width-full"> {% trans %}front.landing_share_event{% endtrans %}</a>
        </div>

    </div>

</div>
<div class="sub_search_transversal"></div>