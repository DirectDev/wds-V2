{% extends 'FrontFrontBundle::layout.html.twig' %}

{#{% set city = app.session.get('city')|capitalize %}#}

{% block title %}
    {{ city.getName()|capitalize }} - {{ page.getTitle }}
{% endblock %}
{% block head %}
    {{ parent() }}
    <meta name="description" content="{{ city.getName()|capitalize }} {{ page.getDescription }}" />
    <!-- partage facebook -->
    <meta property="og:title" content="{{ city.getName()|capitalize }} - {{ page.getTitle }}" />
    <meta property="og:description" content="{{ page.getDescription }}" />
    <meta property="og:image" content="{{ asset('images/wedancesalsa_logo.png', absolute=true)}}" />
    <!-- partage facebook -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/css/compiled/profile-portfolio.css') }}" />       
{% endblock %}


{% block content %}

{% endblock %}

{% block bottomJavascripts %}
    {{ parent() }}    

    <script src="{{ asset("front/js/compiled/page-portfolio.js") }}"></script>

    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            App.initCounter();
            PortfolioPage.init();
        });
    </script>

{% endblock %}   
