        <li>
            <button class="modifyAddress" data-address-id="{{ address.id }}" href="{{ path('front_address_edit', { 'id': address.id }) }}">Modifier</button>    
        </li>
        <li>
            {{ form_start(delete_form,  { 'attr' : { 'class' : 'deleteAddress', 'data-address-id' : address.id } } ) }}
            {{ form_row(delete_form.submit) }}
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>