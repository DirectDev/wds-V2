{% extends 'FrontFrontBundle::layout.html.twig' %}

{% block title %}
    {% trans %}front.event_new_title{% endtrans %}
{% endblock %}

{% block content %}

    <!--=== Content Part ===-->
    <div class="container content profile">


        <!--=== Breadcrumbs ===-->  
        <div class="breadcrumbs">
            <div class="container">
                <h1 class="pull-left">{% trans %}front.event_new_title{% endtrans %}</h1>
            </div><!--/container-->
        </div><!--/breadcrumbs-->
        <!--=== End Breadcrumbs ===-->

        {#<div class="alert alert-info fade in">
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
            <strong>{% trans %}front.alert.info{% endtrans %}</strong>
            {% trans %}event.alert.new_info{% endtrans %}
        </div>

        <div class="alert alert-info fade in">
            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
            <strong>{% trans %}front.alert.info{% endtrans %}</strong>
            {% trans %}event.alert.new_info2{% endtrans %}
        </div>#}

        <!-- Profile Content -->
        <div class="col-md-12">
            <div class="profile-body margin-bottom-20">
                <div class="tab-v1">
                    <ul class="nav nav-justified nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#description">{% trans %}event.edit.description{% endtrans %}</a></li>
                        <li class="disabled"><a data-toggle="tab" href="#description">{% trans %}event.edit.addresses{% endtrans %}</a></li>
                        <li class="disabled"><a data-toggle="tab" href="#description">{% trans %}event.edit.dates{% endtrans %}</a></li>
                        <li class="disabled"><a data-toggle="tab" href="#description">{% trans %}event.edit.links{% endtrans %}</a></li>
                        <li class="disabled"><a data-toggle="tab" href="#description">{% trans %}event.edit.pictures{% endtrans %}</a></li>
                    </ul>          
                    <div class="tab-content">



                        <div id="profile" class="profile-edit tab-pane fade in active">
                            <h2 class="heading-md">{% trans %}event.edit.description.h2{% endtrans %}</h2>
                            <div id="descriptionForm">
                                {% include 'FrontFrontBundle:Event:descriptionForm.html.twig' %}
                            </div>
                        </div>


                    </div>
                </div>    
            </div>
        </div>
    </div>
    <!-- End Profile Content -->



</div><!--/container-->	 	
<!--=== End Content Part ===-->



{% endblock %}    