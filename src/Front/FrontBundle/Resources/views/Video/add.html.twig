
{% set image_default_uri = 'images/wds_300x150_add_inversed.png' %}

<div class="grid-boxes-in" id="video_">

    {% set url = path('fos_user_security_login') %}
    {% if app.user %}
        {% set url = path('front_user_edit', { id : app.user.id } ) %}
    {% endif %}

    <a  href="{{ url }}">
        <img src="{{ asset(image_default_uri) }}" alt="" class="img-responsive" >
    </a>

    <div class="grid-boxes-caption">
        <h3>
            <a class="color-red"  href="{{ path('landing_pro') }}">
                {% trans %}video.list.add.title{% endtrans %}
            </a>
        </h3>
        <p>
            {% trans %}video.list.add.p{% endtrans %}
        </p>
    </div>
</div>