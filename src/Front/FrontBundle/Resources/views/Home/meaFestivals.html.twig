{% for meaFestival in MeaFestivals %}
    <div class="col-sm-4">
        <div class="thumbnails-v1">
            <div class="thumbnail-img">
                <a href="{{ path('front_event_show', { 'id': meaFestival.getEvent.id, 'uri' : meaFestival.getEvent.getURI }) }}" title="{{ meaFestival.getEvent.getTitle()|capitalize }}">
                    <img class="img-responsive" src="{{ asset(meaFestival.getDefaultImageUrl())|imagine_filter('home_festival') }}" alt="">         
                </a>
            </div>
            <div class="caption">
                <h3>
                    <a href="{{ path('front_event_show', { 'id': meaFestival.getEvent.id, 'uri' : meaFestival.getEvent.getURI }) }}" title="{{ meaFestival.getEvent.getTitle()|capitalize }}">
                        {{ meaFestival.getEvent.getTitle|capitalize }}
                    </a>
                </h3>
                <p>{{ meaFestival.getDescription| truncate(200, true) }}</p>
            </div>
        </div>
    </div>
{% endfor %}
