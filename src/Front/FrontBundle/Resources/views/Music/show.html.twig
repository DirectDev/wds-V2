<div class="grid-boxes-in" id="music_{{ music.id }}">

    <div class="bg-color-dark">
        {% include 'FrontFrontBundle:Music:player.html.twig' with { music : music } %}
    </div>

    <div class="grid-boxes-caption">
        <h3>{{ music.getTitle() }}</h3>    
        <p>{% trans %}tags.label{% endtrans %} :
            {{ music.getTagsText()|truncate(20) }}              
        </p> 
        <ul class="list-inline grid-boxes-news">
            <li>
                <span>{% trans %}user.by{% endtrans %}</span>&nbsp; 
                {% if music.user %}
                    <a href="{{ path('front_user_show_public', { username : music.user.username, id : music.user.id } ) }}">
                        {{  music.user.getName|capitalize|truncate(10) }}
                    </a>
                {% endif %}
            </li>
            <li>|</li>
            <li>
                <i class="fa fa-clock-o"></i> 
                {{  music.createdAt|localizeddate('medium', 'none', app.request.locale)|capitalize }}
            </li>
            <li>|</li>
            <li class="pull-right">
                {% include 'FrontFrontBundle:Music:linkLoveMusic.html.twig' with { music : music } %} 
            </li>
        </ul>                    
    </div>
</div>