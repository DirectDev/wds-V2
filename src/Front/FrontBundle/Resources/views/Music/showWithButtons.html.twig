<div id="music_{{ music.id }}" class="tag-box tag-box-v2 box-shadow shadow-effect-1">

    <div class="col-md-10 md-margin-bottom-20">
        <div class="bg-color-light">
            {% include 'FrontFrontBundle:Music:player.html.twig' with { music : music } %}
        </div>

        <div class="margin-bottom-40">
            <h3>{{ music.getTitle() }}</h3>
            <p>{% trans %}tags.label{% endtrans %} :
                {% for tag in music.getTags() %}
                    {{ tag.getTitle() }}              
                {% endfor %}
            </p>                  
        </div>

    </div>

    <div class="col-md-2 md-margin-bottom-20">
        {% if app.user is not null and app.user == music.getUser() and is_granted('ROLE_USER') %} 
            <p> 
                <button class="modifyMusic btn-u btn-u-green" data-music-id="{{ music.id }}" href="{{ path('front_music_edit', { 'id': music.id }) }}">
                    <i class='fa fa-pencil'></i>
                </button> 
            </p>
            <p>
                <button class="deleteMusic btn-u btn-u-red"  data-music-id="{{ music.id }}"  href="{{ path('front_music_delete', { 'id': music.id }) }}">
                    <i class='fa fa-times'></i>
                </button>
            </p>
        {% endif %}   
    </div>
    
    <div class="clear-both"></div>

</div>