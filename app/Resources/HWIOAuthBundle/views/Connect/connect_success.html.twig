{% extends "FrontFrontBundle::layout.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/css/bootstrap-social.css') }}" />
    <link rel="stylesheet" href="{{ asset('front/css/pages/page_log_reg_v1.css') }}">    

{% endblock %}


{% block content %}

    <div class="container content">

        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

            <div class="panel panel-default">

                <div class="panel-padding panel-body text-center">
                    <h3>{{ 'header.success' | trans({'%name%': userInformation.realName}, 'HWIOAuthBundle') }}</h3>
                </div>
                
                </div>

                {% if app.user %} 

                    <a class="btn btn-default btn-md full-width m-b-20" href="{{ path('front_user_show_private', { id : app.user.id } ) }}">
                        <i class="fa fa-user"></i> {% trans %}user.see_profil{% endtrans %}
                    </a>

                    <a class="btn btn-default btn-md full-width m-b-20" href="{{ path('front_user_edit', { id : app.user.id }) }}">
                        <i class="fa fa-pencil"></i> {% trans %}user.edit_profil{% endtrans %}
                    </a>


                    {% include "FrontFrontBundle:Facebook:importButton.html.twig" %}

                {% endif %}

        </div>
    </div>
{% endblock content %}
