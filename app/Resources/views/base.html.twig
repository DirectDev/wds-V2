<!DOCTYPE html>
<!--[if IE 8]> <html lang="{{ app.request.locale }}" class="ie8"> <![endif]-->  
<!--[if IE 9]> <html lang="{{ app.request.locale }}" class="ie9"> <![endif]-->  
<!--[if !IE]><!--> <html lang="{{ app.request.locale }}"> <!--<![endif]-->  
    <head>
        {% block head %}
            <title>{% block title %}{% endblock %}</title>
        {% endblock %}

        <meta charset="utf-8">
        <meta name="robots" content="noindex">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="favicon.ico">

        {% block stylesheets %}


            <!-- Web Fonts -->
            <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>

            <!-- CSS Global Compulsory -->
            <link rel="stylesheet" href="{{ asset("front/plugins/bootstrap/css/bootstrap.min.css") }}">
            <link rel="stylesheet" href="{{ asset('front/plugins/bootstrap-validator/bootstrapValidator.css') }}"/>
            <link rel="stylesheet" href="{{ asset("front/css/style.css") }}">

            <!-- CSS Header and Footer -->
            <link rel="stylesheet" href="{{ asset("front/css/headers/header-default.css") }}">
            <link rel="stylesheet" href="{{ asset("front/css/footers/footer-v3.css") }}">

            <!-- CSS Implementing Plugins -->
            <link rel="stylesheet" href="{{ asset("front/plugins/animate.css") }}">
            <link rel="stylesheet" href="{{ asset("front/plugins/line-icons/line-icons.css") }}">
            <link rel="stylesheet" href="{{ asset("front/plugins/font-awesome/css/font-awesome.min.css") }}">
            <link rel="stylesheet" href="{{ asset("front/plugins/revolution-slider/rs-plugin/css/settings.css") }}" type="text/css" media="screen">
            <!--[if lt IE 9]><link rel="stylesheet" href="{{ asset("front/plugins/revolution-slider/rs-plugin/css/settings-ie8.css") }}" type="text/css" media="screen"><![endif]-->

            <!-- CSS Customization -->
            <link rel="stylesheet" href="{{ asset("front/css/custom.css") }}">
            <link rel="stylesheet" href="{{ asset("front/css/main.css") }}">


        {% endblock %}

        {% block topJavascripts %}

            <script type="text/javascript" src="{{ asset("front/plugins/jquery/jquery.min.js") }}"></script>
            <script type="text/javascript" src="{{ asset('front/js/jquery-ui-1.11.1/jquery-ui.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset("front/plugins/jquery/jquery-migrate.min.js") }}"></script>
            <script type="text/javascript" src="{{ asset("front/plugins/bootstrap/js/bootstrap.min.js") }}"></script> 

            <script src="{{ asset('front/js/mainTop.js') }}" type="text/javascript"></script>

            <script src="{{ asset('front/plugins/datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
            {% if app.request.locale != 'en' %}
                <script src="{{ asset('front/plugins/datepicker/js/locales/bootstrap-datepicker.' ~ app.request.locale ~ '.js') }}" type="text/javascript"></script> 
            {% endif  %}

        {% endblock %}

    </head>

    <body>    

        <div class="wrapper">    


        {% block body %}{% endblock %}


    </div>

    {% block bottomJavascripts %}

        <!-- JS Implementing Plugins -->
        <script type="text/javascript" src="{{ asset("front/plugins/back-to-top.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/smoothScroll.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/jquery.parallax.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/counter/waypoints.min.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/counter/jquery.counterup.min.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/revolution-slider/rs-plugin/js/jquery.themepunch.tools.min.js") }}"></script>
        <script type="text/javascript" src="{{ asset("front/plugins/revolution-slider/rs-plugin/js/jquery.themepunch.revolution.min.js") }}"></script>
        <!-- JS Customization -->
        <script type="text/javascript" src="{{ asset("front/js/custom.js") }}"></script>
        <!-- JS Page Level -->           
        <script type="text/javascript" src="{{ asset("front/js/app.js") }}"></script>
        <!--[if lt IE 9]>
            <script src="{{ asset("front/plugins/respond.js") }}"></script>
            <script src="{{ asset("front/plugins/html5shiv.js") }}"></script>
            <script src="{{ asset("front/plugins/placeholder-IE-fixes.js") }}"></script>
        <![endif]-->

        <script src="{{ asset('front/js/mainBottom.js') }}" type="text/javascript"></script>
        <script  src="{{ asset('front/plugins/bootstrap-validator/bootstrapValidator.js') }}" type="text/javascript"></script>
        <script  src="{{ asset('front/plugins/bootstrap-validator/language/'~ app.request.locale ~'.js') }}" type="text/javascript"></script>
        <script  src="{{ asset('front/js/formValidation') }}" type="text/javascript"></script>

        <script>
            $(document).on('click focus', 'form input.datepicker', function () {

                $("form input.datepicker").datepicker({
                    format: "yyyy-mm-dd", // bug avec les heures
                    autoclose: true,
                    language: "{{ app.request.locale }}"
                });
            });
        </script>
        <script src="{{ asset('front/plugins/ckeditor/ckeditor.js') }}"></script>

    {% endblock %}

    <script>
            $(document).ready(function () {
                CKEDITOR.replace('.ckeditor');
            });
    </script>
</body>
</html>
